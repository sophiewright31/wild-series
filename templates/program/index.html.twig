{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
        <h1>Toutes les séries : </h1>
        {% for program in programs %}
            <div>
                <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                <p>{{ program.summary }}</p>
                <a href="{{ path("program_show", { program: program.id }) }}">Voir la fiche</a>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
            <br>
            <h4> Ajout d'un programme </h4>
            <a href="{{ path('program_new') }}">
                Ajouter un programme
            </a>

            <br><br>
        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
{% endblock %}
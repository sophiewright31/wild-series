{% extends 'base.html.twig' %}

 {% block title %} Formulaire d'ajout d'un Programme {% endblock %}

 {% block body %}
     <h1 class="mb-3"> Formulaire d'ajout d'un Programme : </h1>
     {{ form_start(form) }}
     <div class="form-group">
         {{ form_label(form.title) }}
         {{ form_widget(form.title) }}
     </div>

     <div class="form-group">
         {{ form_label(form.summary) }}
         {{ form_widget(form.summary) }}
     </div>

     <div class="form-group">
         {{ form_label(form.poster) }}
         {{ form_widget(form.poster) }}
     </div>

     <div class="form-group">
         {{ form_label(form.category) }}
         {{ form_widget(form.category) }}
     </div>

     <input class="btn btn-dark mt-3" type='submit' value='Ajouter'>
     {{ form_end(form) }}

     <a class="mt-3" href="{{ path('category_index') }}">
         Retour à la liste des catégories
     </a>
 {% endblock %}
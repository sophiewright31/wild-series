{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Tous les programmes de la table category : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / Catégorie : {{ category.name }}</h2>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}
    <br><br>

    <h4> Ajout d'une catégorie : </h4>
    <a href="{{ path("category_new") }}"> Lien vers le formulaire </a>

    <br><br>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}